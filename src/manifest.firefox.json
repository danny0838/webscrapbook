{
  "manifest_version": 3,
  "name": "__MSG_ExtensionName__",
  "description": "__MSG_ExtensionDescription__",
  "version": "2.23.5.1",
  "author": "Danny Lin",
  "default_locale": "en",

  "browser_specific_settings": {
    "gecko": {
      "id": "webscrapbook-mv3@danny0838.addons.mozilla.org",
      "strict_min_version": "109.0"
    },
    "gecko_android": {
      "strict_min_version": "113.0"
    }
  },

  "homepage_url": "https://github.com/danny0838/webscrapbook",

  "icons": {
    "32": "core/scrapbook_32.png",
    "128": "core/scrapbook_128.png"
  },

  "permissions": [
    "contextMenus",
    "downloads",
    "storage",
    "tabs",
    "scripting",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],

  "optional_permissions": [
    "geolocation"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "page": "background.html"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "*.map",
        "resources/*",
        "scrapbook/sitemap.html",
        "viewer/load.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],

  "options_ui": {
    "open_in_tab": true,
    "page": "core/options.html"
  },

  "action": {
    "default_icon": {
      "32": "core/scrapbook_32.png",
      "128": "core/scrapbook_128.png"
    },
    "default_title": "__MSG_ExtensionName__",
    "default_popup": "core/action.html"
  },

  "sidebar_action": {
    "default_title": "__MSG_ExtensionName__",
    "default_panel": "scrapbook/sidebar.html",
    "default_icon":  {
      "32": "core/scrapbook_32.png",
      "128": "core/scrapbook_128.png"
    },
    "open_at_install": false
  },

  "commands": {
    "_execute_action": {},
    "_execute_sidebar_action": {},
    "openScrapBook": {
      "description": "__MSG_OpenScrapBook__"
    },
    "openOptions": {
      "description": "__MSG_OpenOptions__"
    },
    "openViewer": {
      "description": "__MSG_OpenViewer__..."
    },
    "openSearch": {
      "description": "__MSG_OpenSearch__..."
    },
    "searchCaptures": {
      "description": "__MSG_SearchCaptures__"
    },
    "captureTab": {
      "description": "__MSG_CaptureTab__"
    },
    "captureTabSource": {
      "description": "__MSG_CaptureTabSource__"
    },
    "captureTabBookmark": {
      "description": "__MSG_CaptureTabBookmark__"
    },
    "captureTabAs": {
      "description": "__MSG_CaptureTabAs__..."
    },
    "batchCaptureLinks": {
      "description": "__MSG_BatchCaptureLinks__..."
    },
    "editTab": {
      "description": "__MSG_EditTab__"
    }
  }
}
